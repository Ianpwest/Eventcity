@model Eventcity.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>

    @{
    if(Model.bFailedRegister)
    {
        <h2>Failed to register! What do we do here?</h2>
    }
    else
    {
        <h2>Create a new account.</h2>
    }
}
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </li>
             <li>
                @Html.LabelFor(m => m.HomeState)
                @Html.TextBoxFor(m => m.HomeState)
            </li>
             <li>
                @Html.LabelFor(m => m.HomeCity)
                @Html.TextBoxFor(m => m.HomeCity)
            </li>
        </ol>
        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
